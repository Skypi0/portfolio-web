				</SocialBadge>
			</nav>
		</SectionContainer>
		<SectionContainer id="experience" class="pt-2">
			<div class="flex flex-row items-center gap-x-2 pb-2">
				<BriefCase class="size-7" />
				<h2 class="text-2xl font-semibold">Work Experience</h2>
			</div>
			<Experience />
		</SectionContainer>
	</main>
</Layout>
